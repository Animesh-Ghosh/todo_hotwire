<p style="color: green"><%= notice %></p>

<h1>Tasks</h1>

<p>Add a new Task</p>
<%= turbo_frame_tag @task do %>
  <%= render 'form', task: @task %>
<% end %>

<%= turbo_stream_from :tasks %>
<%= turbo_frame_tag :tasks, data: { controller: :sortable, sortable_handle_class: '.sort-handle' } do %>
  <%= render @tasks %>
<% end %>
