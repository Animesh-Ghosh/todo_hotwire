<%= turbo_frame_tag task do %>
  <p>
    <strong>Title:</strong>
    <%= task.title %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= task.description %>
  </p>

  <p>
    <strong>Completed:</strong>
    <%= task.completed %>
  </p>

  <p>
    <%= link_to "Edit", edit_task_path(task) %>
    <%= link_to 'Delete', task, data: { turbo_method: :delete } %>
  </p>
</div>
<% end %>
