<%= turbo_frame_tag task, style: 'display: flex; border: 1px solid black; margin: 1rem 0;', data: { sortable_url: task_path(task) } do %>
  <span class="sort-handle">::</span>
  <div>
    <p>
      <strong>Title:</strong>
      <%= task.title %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= task.description %>
    </p>

    <p>
      <strong>Completed:</strong>
      <%= task.completed %>
    </p>

    <p>
      <%= link_to "Edit", edit_task_path(task) %>
      <%= link_to 'Delete', task, data: { turbo_method: :delete } %>
    </p>
  </div>
</div>
<% end %>
